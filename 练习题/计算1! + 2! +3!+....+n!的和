public class TextDeno {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int n = scan.nextInt();
        System.out.println(add(n));
    }
    public static int add(int n) {
        int sum = 0;
        for (int i = 1; i <= n; i++) {
            sum += fac(i);

        }
        return sum;
    }
    public static int fac(int i) {
        int ret = 1;
        for (int j = 1; j <= i; j++) {
            ret *= j;
        }
        return ret;
    }
}
